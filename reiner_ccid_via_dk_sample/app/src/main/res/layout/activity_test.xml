<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="userinterface.TestActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Bluetooth SDK Test" />

    <Button
        android:id="@+id/buttonSecoderInfo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:gravity="center"
        android:text="Secoder Info" />

    <Button
        android:id="@+id/buttonCCIDSecoder"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSecoderInfo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="CCID via Secoder3" />

    <Button
        android:id="@+id/buttonHHDSecoder"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCCIDSecoder"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="HHD via Secoder3" />

    <Button
        android:id="@+id/buttonEGKviaCCID"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHHDSecoder"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="EGK via CCID" />

    <Button
       android:id="@+id/buttonESCCCID"
       android:layout_width="180dp"
       android:layout_height="wrap_content"
        android:gravity="center"
       android:text="ESC CCID"
        android:layout_below="@+id/buttonEGKviaCCID"
        android:layout_alignStart="@+id/buttonEGKviaCCID" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 0.5.3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>